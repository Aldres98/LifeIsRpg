<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aldres.lifeisrpg.TasksActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_icon"
            android:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/task_icon"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Lorem ipsum dolor"
            android:id="@+id/taskTitle" />

        <TextView
            android:id="@+id/exp_left"
            android:text="100/600"
            android:layout_marginStart="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/task_icon"
            android:layout_centerInParent="true"
            android:layout_below="@+id/taskTitle"
            />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_marginStart="32dp"
            android:progress="40"
            android:layout_toRightOf="@id/task_icon"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exp_left"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:id="@+id/task_description"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec at massa lobortis"
            android:layout_below="@id/progressBar2"
            android:layout_alignEnd="@id/progressBar2"
            android:layout_toRightOf="@id/task_icon"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>
